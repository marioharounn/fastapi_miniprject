{
  "name": "FastAPI Dev Container",
  "build": {
    "dockerfile": "fastapi_project/Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "postCreateCommand": "pip install -r fastapi_project/requirements.txt"
}
